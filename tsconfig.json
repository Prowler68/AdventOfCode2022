{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "lib": [
            "ES2021.String"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}